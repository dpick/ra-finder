%meta{'http-equiv' => 'Refresh', :content => 180} <!-- Refresh every 3 minutes -->
%table{:border => "0"}
  %tr
    %td 
      %iframe{:frameborder => "0", :height => "350", :marginheight => "0", :marginwidth => "0", :scrolling => "no", :src => @url, :width => "425"}
    %td{:valign => "top"}
      %h1 Floor Events:
      -@events.each do |label, time, month, day|
        %b="#{label}"
        ="at #{time} - #{month} #{day}"
        %br
  %tr
    %td
      %br
      %h1= @nick_line
